<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.yda.yiyunchain.activity.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:src="@mipmap/bg1" />

    <include
        android:id="@+id/top"
        layout="@layout/title" />

    <com.yda.yiyunchain.MyView.KJScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/phoneline"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="52dp"
                android:layout_marginRight="52dp"
                android:layout_marginTop="53dp"
                android:background="@color/black80"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="17dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/phoneic" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="17dp"
                    android:background="@null"
                    android:hint="请输入手机号码"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textColor="#302219"
                    android:textColorHint="#dddddd"
                    android:textCursorDrawable="@null"
                    android:textSize="17dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/passwordline"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="52dp"
                android:layout_marginRight="52dp"
                android:layout_marginTop="11dp"
                android:background="@color/black80"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/passwordic" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="17dp"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textColor="#302219"
                    android:textColorHint="#dddddd"
                    android:textCursorDrawable="@null"
                    android:textSize="17dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="51dp"
                android:layout_marginRight="51dp"
                android:layout_marginTop="22dp"
                android:gravity="center"
                android:text="ESCC登陆"
                android:textColor="@color/white"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/tologinyunda"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="51dp"
                android:layout_marginRight="51dp"
                android:layout_marginTop="22dp"
                android:gravity="center"
                android:text="远大会员登陆"
                android:textColor="#302219"
                android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/lin2"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginLeft="51dp"
                android:layout_marginRight="51dp"
                android:layout_marginTop="21dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/toRegistered"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="会员注册"
                    android:textColor="#302219"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/toForgetPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="忘记密码"
                    android:textColor="#302219"
                    android:textSize="15dp" />

            </LinearLayout>


        </LinearLayout>
    </com.yda.yiyunchain.MyView.KJScrollView>


</RelativeLayout>
